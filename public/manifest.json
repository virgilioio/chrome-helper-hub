{
  "manifest_version": 3,
  "name": "GoGio â€“ LinkedIn Companion",
  "description": "Add candidates from LinkedIn into GoGio pipelines in seconds.",
  "version": "0.2.7",
  "action": {
    "default_title": "GoGio",
    "default_icon": {
      "16": "icon-128.png",
      "48": "icon-128.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "16": "icon-128.png",
    "48": "icon-128.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "identity",
    "scripting",
    "activeTab",
    "webNavigation",
    "downloads"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://*.linkedin.com/*",
    "https://aba41743-9dfe-4b0e-88f2-0c24aeb910c4.functions.supabase.co/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*", "https://*.linkedin.com/*"],
      "js": ["linkedin-content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "gio-avatar.png",
        "gogio-logo.png",
        "gio-face-1.png",
        "gio-face-2.png",
        "gio-face-3.png",
        "gio-face-4.png",
        "gio-face-5.png"
      ],
      "matches": ["https://www.linkedin.com/*", "https://*.linkedin.com/*"]
    }
  ]
}
